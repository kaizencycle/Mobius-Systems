{
  "name": "api-gateway",
  "version": "1.0.0",
  "description": "Kaizen OS API Gateway - Unified routing and middleware",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:vercel": "echo 'Vercel handles TypeScript compilation for api/ directory'",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src api --ext .ts",
    "test": "jest"
  },
  "dependencies": {
    "@civic/integrity-core": "*",
    "@civic/shield-policies": "*",
    "@vercel/node": "^3.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.0",
    "express-rate-limit": "^7.1.0",
    "helmet": "^7.1.0",
    "http-proxy-middleware": "^2.0.6",
    "jsonwebtoken": "^9.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/node": "^20.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
