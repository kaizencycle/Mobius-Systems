{
  "buildCommand": "cd ../.. && npm run build --workspace=apps/aurea-site",
  "devCommand": "npm run dev",
  "framework": "nextjs",
  "installCommand": "cd ../.. && npm ci --legacy-peer-deps",
  "env": {
    "AGENT_ID": "AUREA",
    "AGENT_DOMAIN": "aurea.gic"
  },
  "headers": [
    {
      "source": "/.well-known/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, must-revalidate"
        }
      ]
    },
    {
      "source": "/api/gi/stream",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-transform"
        },
        {
          "key": "Content-Type",
          "value": "text/event-stream"
        },
        {
          "key": "Connection",
          "value": "keep-alive"
        },
        {
          "key": "X-Accel-Buffering",
          "value": "no"
        }
      ]
    }
  ]
}
