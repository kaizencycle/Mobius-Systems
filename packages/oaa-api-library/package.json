{
  "name": "@civic/oaa-api-library",
  "version": "0.1.0",
  "description": "A comprehensive library for the Open Agent Architecture (OAA) system",
  "main": "src/core/server.ts",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:quest-verifier": "node src/scripts/test-quest-verifier.mjs",
    "test:quest-verifier:verbose": "node src/scripts/test-quest-verifier.mjs --verbose",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "sh -c 'if command -v husky >/dev/null 2>&1 && command -v git >/dev/null 2>&1 && git rev-parse --is-inside-work-tree >/dev/null 2>&1 && [ \"$(git rev-parse --show-toplevel)\" = \"$(pwd)\" ]; then husky install; else echo \"skip husky (monorepo sub-package or missing git workspace/binary)\"; fi'",
    "eomm-sync": "node src/scripts/eomm-sync.mjs",
    "citation-hygiene": "bash src/scripts/citation-hygiene.sh",
    "hmac:note": "node scripts/hmacNote.mjs",
    "postinstall": "node scripts/initAgentGuards.mjs || true",
    "predev": "node scripts/initAgentGuards.mjs || true",
    "prestart": "node scripts/initAgentGuards.mjs || true",
    "vitest": "vitest run",
    "vitest:watch": "vitest"
  },
  "keywords": [
    "oaa",
    "open-agent-architecture",
    "ai",
    "agents",
    "api",
    "library",
    "typescript",
    "nextjs",
    "gic",
    "eomm",
    "civic-ai",
    "voice-synthesis",
    "holo"
  ],
  "author": "KaizenCycle",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kaizencycle/OAA-API-Library.git"
  },
  "bugs": {
    "url": "https://github.com/kaizencycle/OAA-API-Library/issues"
  },
  "homepage": "https://github.com/kaizencycle/OAA-API-Library#readme",
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "next": "^14.0.0",
    "node-fetch": "^3.3.2",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "aws-sdk": "^2.1500.0",
    "crypto": "^1.0.1",
    "tweetnacl": "^1.0.3",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}

