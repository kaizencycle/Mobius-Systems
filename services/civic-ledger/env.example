# Civic Ledger Service Environment Configuration
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgres://postgres:password@localhost:5432/civic_ledger

# GI Aggregator Service URL
GI_AGGREGATOR_URL=http://localhost:3001

# Epoch Configuration
EPOCH_BURN_ENABLED=false
EPOCH_LENGTH_DAYS=90
DECAY_PERCENTAGE=0.5

# Governance Thresholds
GI_FLOOR_WARN=0.950
GI_FLOOR_HALT=0.900
GI_DEFAULT=0.999

# Security Configuration
API_KEY_SECRET=your_api_key_secret_here
JWT_SECRET=your_jwt_secret_here
ATTESTATION_SIGNING_KEY=your_attestation_signing_key_here

# Ledger Genesis (for epoch calculation)
LEDGER_GENESIS_TIMESTAMP=2025-01-01T00:00:00Z

# Optional: Monitoring
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=info

