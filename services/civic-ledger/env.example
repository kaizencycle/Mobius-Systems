# Civic Ledger Service Environment Configuration
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3000
NODE_ENV=development

# Postgres
PGHOST=127.0.0.1
PGPORT=5432
PGDATABASE=civic_ledger
PGUSER=civic
PGPASSWORD=civic
PGSSL=false

# Database Configuration
DATABASE_URL=postgres://postgres:password@localhost:5432/civic_ledger

# GI Aggregator Service URL
GI_AGGREGATOR_URL=http://localhost:3001

# GI aggregator fallback/window (days) if none provided
GI_TWA_LOOKBACK_DAYS=30

# Epoch Configuration
EPOCH_BURN_ENABLED=false
EPOCH_LENGTH_DAYS=90
DECAY_PERCENTAGE=0.5

# Governance Thresholds
GI_FLOOR_WARN=0.950
GI_FLOOR_HALT=0.900
GI_DEFAULT=0.999

# Security Configuration
API_KEY_SECRET=your_api_key_secret_here
JWT_SECRET=your_jwt_secret_here
ATTESTATION_SIGNING_KEY=your_attestation_signing_key_here

# HMAC (Phase-1 shared secret)
ATTEST_HMAC_SECRET_AUREA=replace_me_with_long_random_string

# Example: to create Ed25519 (ZEUS) locally:
#   openssl genpkey -algorithm ED25519 -out zeus_ed25519_private.pem
#   openssl pkey -in zeus_ed25519_private.pem -pubout -out zeus_ed25519_public.pem
# Paste public key into configs/attestors.yaml

# Ledger Genesis (for epoch calculation)
LEDGER_GENESIS_TIMESTAMP=2025-01-01T00:00:00Z

# Optional: Monitoring
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=info

