{
  "name": "@civic/ledger-service",
  "version": "1.0.0",
  "description": "Civic Ledger Service - Value layer API for integrity economy",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "test": "node --test dist/**/*.test.js",
    "clean": "rm -rf dist",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:recreate": "tsx src/db/migrate.ts --recreate"
  },
  "dependencies": {
    "@civic/integrity-units": "*",
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "yaml": "^2.5.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.2",
    "supertest": "^6.3.3",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "keywords": ["civic", "ledger", "integrity", "economy", "api"],
  "author": "Kaizen OS Core Team",
  "license": "MIT"
}
